</div>
<div class="container2">
    <h2>Resultat</h2>

    @foreach (var game in LeagueResult.Matches)
    {
        <div class="game-section">
            <!-- GAME HEADER -->
            <div class="game-header">
                <div class="teams">
                    <span class="team">@game.GameTime</span>
                    <span class="team">@game.Team1</span>
                    <span class="team">@game.Team2</span>
                    <span class="score">@game.Team1Score</span>
                    <span class="score">@game.Team2Score</span>
                </div>
            </div>

            <!-- USER PREDICTIONS -->
            <div class="predictions">
                @foreach (var prediction in game.UserMatches)
                {
                    <div class="prediction-row">
                        <span class="username">@prediction.Team</span>
                        <span class="username">@prediction.Owner</span>
                        <span class="guess">@prediction.Team1Score</span>
                        <span class="guess">@prediction.Team2Score</span>
                        <span class="guess">@prediction.Points</span>
                    </div>
                }
            </div>
        </div>
    }
</div>
<!-- ========================================== -->
<!-- POPUP MODAL -->
<!-- ========================================== -->
@if (showCreateLeague)
{
    <div class="modal-overlay" @onclick="ClosePopupCreate">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Skapa ny liga</h3>
                <button class="btn-close" @onclick="ClosePopupCreate">
                    ×
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">
                        Namn
                    </label>
                    <input type="text" id="name" class="form-control" @bind="newLeague.Name" />
                </div>
                <div class="form-group">
                    <label for="password">
                        Lösenord
                    </label>
                    <input type="text" id="password" class="form-control" @bind="newLeague.Password" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="ClosePopupCreate">
                    Avbryt
                </button>
                <button class="btn btn-primary" @onclick="SaveLeague">
                    Spara liga
                </button>
            </div>
        </div>
    </div>
}

<!-- ========================================== -->
<!-- POPUP MODAL -->
<!-- ========================================== -->
@if (showJoinLeague)
{
    <div class="modal-overlay" @onclick="ClosePopupJoin">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Gå med i liga</h3>
                <button class="btn-close" @onclick="ClosePopupJoin">
                    ×
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">
                        Namn
                    </label>
                    <input type="text" id="name" class="form-control" @bind="joinLeague.Name" />
                </div>
                <div class="form-group">
                    <label for="password">
                        Lösenord
                    </label>
                    <input type="text" id="password" class="form-control" @bind="joinLeague.Password" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="ClosePopupJoin">
                    Avbryt
                </button>
                <button class="btn btn-primary" @onclick="SaveJoinLeague">
                    Spara liga
                </button>
            </div>
        </div>
    </div>
}


