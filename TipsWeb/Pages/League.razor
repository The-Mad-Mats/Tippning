@page "/leagues"
@inject Models.AppState AppState

<div class="container">
    <div class="header">
        <h2>Tabell</h2>
    </div>

    <div class="filter-section">
        <label for="category">Välj liga:</label>
        <select id="category" class="form-select" @bind="selectedLeague" @bind:after="OnCategoryChanged">
            @*<option value="">All Categories</option>*@
            @foreach (var category in Leagues)
            {
                <option value = "@category.Id">
                    @category.Name
                </option>
            }
        </select>
        <div class="button-container">
            <button class="btn btn-primary" @onclick="JoinLeague">Gå med i liga</button>
            <button class="btn btn-secondary" @onclick="CreateLeague">Skapa liga</button>
        </div>

    </div>

    @* <div class="results-info">
        <p>Showing @filteredProducts.Count of @products.Count products</p>
    </div> *@

   @*  <div class="product-grid"> *@

        @if(LeagueResult.Rows.Any())
        {
            <div class="container mt-4">
                @foreach(var row in LeagueResult.Rows)
                {
                    <div class="product-card">
                    <div class="row align-items-center">

                       <div class="col-md-1">
                            @row.Position
                        </div>
                        <div class="col-md-4">
                            <b>@row.Team</b> <br />
                            @row.UserName
                        </div>
                        <div class="col-md-1">
                            @row.Points
                        </div>
                    </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class = "no-results">
                <p>
                    Inga lag i den här ligan
                </p>
            </div>
        }
