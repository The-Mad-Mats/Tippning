@page "/admin"

<!-- ========================================== -->
<!-- GAMES LIST CONTAINER -->
<!-- ========================================== -->
<div class="container">
    
    <div class="header">
        <h2>Games Management</h2>
    </div>

    <!-- GAMES LIST -->
    <div class="games-list">
        
        @if(games.Any())
        {
            @foreach(var game in games)
            {
                <div class="game-row">
                    <div class="checkbox-cell">
                        <input type="checkbox" @bind="game.IsSelected"/>
                    </div>
                    <div class="text-cell">
                        @game.HomeTeam
                    </div>
                    <div class="text-cell">
                        @game.AwayTeam
                    </div>
                    <div class="input-cell">
                        <input type="text" class="text-input" @bind="game.HomeTeamScore" placeholder="Home tema score"/>
                    </div>
                    <div class="input-cell">
                        <input type="text" class="text-input" @bind="game.AwayTeamScore" placeholder="Away team score"/>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <p>No games available. Click "Add Games" to get started.</p>
            </div>
        }
    </div>
    <!-- BUTTONS -->
    <div class="button-container">
        <button class="btn btn-primary" @onclick="DoCalculation">Do Calculation</button>
        <button class="btn btn-secondary" @onclick="AddGames">Add Games</button>
    </div>
    <!-- CALCULATION RESULT -->
    @if(!string.IsNullOrEmpty(calculationResult))
    {
        <div class="result-message">
            <strong>
                Calculation Result:
            </strong>
            @calculationResult
        </div>
    }
</div>
<!-- ========================================== -->
<!-- POPUP MODAL -->
<!-- ========================================== -->
@if( showPopup)
{
    <div class="modal-overlay" @onclick="ClosePopup">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Add New Game</h3>
                <button class="btn-close" @onclick="ClosePopup">
                    ×
                </button>
            </div>
            <div class="modal-body">
                <!-- DATE FIELD -->
                <div class="form-group">
                    <label for="date">
                        Date
                    </label>
                    <input type="datetime" id="date" class="form-control" @bind="newGame.Date"/>
                </div>
                <!-- HOME TEAM FIELD -->
                <div class="form-group">
                    <label for="homeTeam">
                        Home Team
                    </label>
                    <input type="text" id="homeTeam" class="form-control" @bind="newGame.HomeTeam" placeholder="Enter home team name"/>
                </div>
                <!-- AWAY TEAM FIELD -->
                <div class="form-group">
                    <label for="awayTeam">
                        Away Team
                    </label>
                    <input type="text" id="awayTeam" class="form-control" @bind="newGame.AwayTeam" placeholder="Enter away team name"/>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="ClosePopup">
                    Cancel
                </button>
                <button class="btn btn-primary" @onclick="SaveGame">
                    Save Game
                </button>
            </div>
        </div>
    </div>
}
